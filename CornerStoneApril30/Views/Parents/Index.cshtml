@model IEnumerable<CornerStoneApril30.Models.Parent>

@{
    ViewData["Title"] = "Parents";
}

<h2>Parents</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.LastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.FirstMidName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RelationToChild)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FirstMidName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phone)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RelationToChild)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ParentID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ParentID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ParentID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
