            else {
                $('#createtrip').submit().removeAttr('disabled');
                $('#createtrip').nextAll("span").hide();
                $("input[type='checkbox']").attr('disabled', false);
                document.getElementById('counter').innerHTML = num;
                $('#rcorners4').css("background-color", "#99f291");
            }
        });
