@model CornerStoneApril30.Models.Trip

@{
    ViewData["Title"] = "Create";
}
<style>
    #rcorners3 {
        border-radius: 8px 25px;
        background: #87c9ff;
        width: 85px;
        height: 59px;
        margin-bottom: 40px;
        line-height: 59px;
        color: white;
        text-align: center;
        vertical-align: middle;
    }

    #rcorners4 {
        border-radius: 8px 25px;
        background: #99f291;
        width: 170px;
        height: 59px;
        line-height: 59px;
        text-align: center;
        vertical-align: middle;
        margin-bottom: 40px;
    }

    #countS {
        height: 59px;
        line-height: 59px;
        font-weight: 600;
        font-size: xx-large;
    }

    .countT {
        height: 59px;
        line-height: 59px;
